<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.sacombank.consumers.views.widgets.SwitchPlus
        app:switchfont="@string/ROBOTO_LIGHT"
        android:id="@+id/SwitchTheMacDinh"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tvStateDefault"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:text="Thẻ mặc định"
        android:textSize="16sp"
        android:textColor="#888888"
        android:checked="false"
        android:thumb="@drawable/customswitchselector"
        android:track="@drawable/custom_track"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line"
        android:gravity="center" />

    <com.sacombank.consumers.views.widgets.SwitchPlus
        app:switchfont="@string/ROBOTO_LIGHT"
        android:id="@+id/SwitchTheHoatDong"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/tvStateDefault"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:text="Thẻ hoạt động"
        android:checked="false"
        android:textSize="16sp"
        android:textColor="#888888"
        android:thumb="@drawable/customswitchselector"
        android:track="@drawable/custom_track"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.sacombank.consumers.views.widgets.TextViewPlus
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:text="Số thẻ"
            app:font="@string/ROBOTO_LIGHT"
            android:textSize="16sp"
            />

        <com.sacombank.consumers.views.widgets.TextViewPlus
            android:id="@+id/txtSoThe"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:hint="xxxx xxxx xxxx 1234"
            android:textSize="16sp"
            android:textColor="#000000"
            app:font="@string/ROBOTO_LIGHT"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>
