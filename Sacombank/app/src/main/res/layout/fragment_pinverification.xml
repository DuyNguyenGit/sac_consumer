<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.sacombank.consumers.views.widgets.TextViewPlus
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_bg_introduce"
        android:text="" />

    <com.sacombank.consumers.views.widgets.TextViewPlus
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pinverification1"
        android:gravity="center"
        android:textSize="16dp"
        app:font="@string/ROBOTO_LIGHT"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <com.sacombank.consumers.views.widgets.TextViewPlus
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pinverification3"
            app:font="@string/ROBOTO_LIGHT"
            android:paddingLeft="30dp"
            android:textSize="16dp"/>

        <com.sacombank.consumers.views.widgets.EditTextViewPlus
            android:id="@+id/txtVerification_Pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="XXXXXX"
            app:font="@string/ROBOTO_LIGHT"
            android:gravity="right|center"/>
    </LinearLayout>

    <com.sacombank.consumers.views.widgets.TextViewPlus
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line"
        android:text=""
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="right|center">
        <com.sacombank.consumers.views.widgets.ButtonPlus
            app:font="@string/ROBOTO_LIGHT"
            android:id="@+id/button2"
            style="?android:textAppearanceSmall"
            android:background="@drawable/login_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textAllCaps="false"
            android:text="@string/verification"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16dp"/>
    </LinearLayout>


</LinearLayout>
