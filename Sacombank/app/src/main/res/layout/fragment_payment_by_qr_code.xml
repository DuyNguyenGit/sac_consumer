<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.sacombank.consumers.views.widgets.TextViewPlus
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/thongTinChiTietDonHang"
                android:textSize="15dp"
                app:font="@string/ROBOTO_LIGHT" />

            <com.sacombank.consumers.views.widgets.TextViewPlus
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/line"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.sacombank.consumers.views.widgets.TextViewPlus
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="@string/textview_order_number"
                    android:textSize="15sp"
                    app:font="@string/ROBOTO_LIGHT" />

                <com.sacombank.consumers.views.widgets.TextViewPlus
                    android:id="@+id/txtOrderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:font="@string/ROBOTO_LIGHT" />
            </LinearLayout>

            <com.sacombank.consumers.views.widgets.TextViewPlus
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/line"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.sacombank.consumers.views.widgets.TextViewPlus
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="@string/textView_amount_money"
                    android:textSize="15sp"
                    app:font="@string/ROBOTO_LIGHT" />

                <com.sacombank.consumers.views.widgets.EditTextViewPlus
                    android:id="@+id/edtAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:gravity="right"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:font="@string/ROBOTO_LIGHT" />
            </LinearLayout>

            <com.sacombank.consumers.views.widgets.TextViewPlus
                android:id="@+id/textView56"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/line"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.sacombank.consumers.views.widgets.TextViewPlus
                    android:id="@+id/textView73"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="@string/textview_pay_at"
                    android:textSize="15sp"
                    app:font="@string/ROBOTO_LIGHT" />

                <com.sacombank.consumers.views.widgets.TextViewPlus
                    android:id="@+id/txtPayAt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:font="@string/ROBOTO_LIGHT" />
            </LinearLayout>

            <com.sacombank.consumers.views.widgets.TextViewPlus
                android:id="@+id/textView57"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/line"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.sacombank.consumers.views.widgets.TextViewPlus
                    android:id="@+id/textView74"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="@string/textview_day_trading"
                    android:textSize="15sp"
                    app:font="@string/ROBOTO_LIGHT" />

                <com.sacombank.consumers.views.widgets.TextViewPlus
                    android:id="@+id/txtTradingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:font="@string/ROBOTO_LIGHT" />
            </LinearLayout>

            <com.sacombank.consumers.views.widgets.TextViewPlus
                android:id="@+id/textView58"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/line"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.sacombank.consumers.views.widgets.TextViewPlus
                    android:id="@+id/textView75"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="@string/textview_payment_account"
                    android:textSize="15sp"
                    app:font="@string/ROBOTO_LIGHT" />

            </LinearLayout>

            <com.sacombank.consumers.views.widgets.TextViewPlus
                android:id="@+id/textView59"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.sacombank.consumers.views.widgets.TextViewPlus
                    android:id="@+id/textView76"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="@string/textview_option_tags"
                    android:textSize="15sp"
                    app:font="@string/ROBOTO_LIGHT" />

                <Spinner
                    android:id="@+id/spinner_Code"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:dropDownWidth="fill_parent"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <com.sacombank.consumers.views.widgets.ButtonPlus
                android:id="@+id/btnContinueQRCode"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/xacnhan"
                android:text="@string/btnTiepTucQRCode1"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:buttonfont="@string/ROBOTO_LIGHT" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
