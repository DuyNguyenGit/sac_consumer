<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_sidemenu_selector"
    android:id="@+id/group_layout">

    <View
        android:background="@color/bg_line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp" />

    <ImageView
        android:id="@+id/list_item_genre_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/horizontal_margin" />

    <com.sacombank.consumers.views.widgets.TextViewPlus
        android:id="@+id/list_item_genre_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/list_item_genre_icon"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:gravity="center_vertical"
        android:textSize="16sp"
        app:font="@string/ROBOTO_LIGHT"
        android:textColor="@android:color/white"
        tools:text="Genre" />

    <ImageView
        android:id="@+id/list_item_genre_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:src="@drawable/ic_arrow_down" />

</RelativeLayout>

