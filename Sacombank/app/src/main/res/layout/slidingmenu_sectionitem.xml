<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorChild"
    android:layout_marginTop="0.3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/list_item_height">

    <ImageView
        android:id="@+id/list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/list_item_left_margin"
        android:src="@drawable/ic_menu_item"  />

    <com.sacombank.consumers.views.widgets.TextViewPlus
        android:id="@+id/list_item_artist_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:layout_marginLeft="65dp"
        android:gravity="center_vertical"
        app:font="@string/ROBOTO_LIGHT"
        tools:text="Artist Name" />

</FrameLayout>
