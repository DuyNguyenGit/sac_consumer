<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <com.sacombank.consumers.views.widgets.TextViewPlus
            android:id="@+id/txtHistory_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:font="@string/ROBOTO_LIGHT"
            android:text="Mua bán hàng hóa tại Lazada"
            android:textColor="#111111"/>

        <com.sacombank.consumers.views.widgets.TextViewPlus
            android:id="@+id/txtHistory_Cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="450,000 VND"
            app:font="@string/ROBOTO_LIGHT"
            android:textColor="#111111"
            android:textStyle="bold"/>

    </LinearLayout>

    <com.sacombank.consumers.views.widgets.TextViewPlus
        android:id="@+id/txtHistory_Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4321"
        app:font="@string/ROBOTO_LIGHT"
        android:textColor="#111111"
        android:layout_marginRight="15dp"/>
</LinearLayout>